number = int(input("Num: "))
binary = []
count = 0
place = 0

ext = None
while ext != True:
    if 2**count > number:
        place = count
        ext = True
    count += 1

done = None

while done != True:
    for i in range(place):
        if 2**(place - i) <= number:
            binary.insert(-1,1)
            number -= 2**(place - i)
        else:
            binary.insert(-1,0)
        
        if number == 0:
            done = True

print(binary)
